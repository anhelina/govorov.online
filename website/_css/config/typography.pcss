:root {
  --base-font-family: "avenir next", avenir, -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  --base-font-size: 16px;
  --base-line-height: 1.5;
  --readable-heading-width: 36em;
  --readable-text-width: 30em;
  --h1-size: calc(1.5em + 1vw);
  --h2-size: calc(1.15em + 1vw);
  --h3-size: calc(1em);
}
